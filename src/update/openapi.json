  "paths": {
    "/update/job/snapshot": {
      "post": {
        "tags": [
          "update"
        ],
        "summary": "Start process download and insert snapshot from unpaywall",
        "operationId": "post-update-job-snapshot",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "index",
            "description": "index where the unpaywall data will be inserted",
            "required": false,
            "schema": {
              "type": "object",
              "required": [
                "userName"
              ],
              "properties": {
                "interval": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Process start"
          },
          "401": {
            "$ref": "#/responses/Not-authorized"
          },
          "409": {
            "description": "Update in progress",
            "schema": {
              "type": "string",
              "default": "changeme"
            }
          }
        },
        "security": [
          {
            "x-api-key": []
          }
        ],
        "description": "Download and insert the latest snapshot from unpaywall.org"
      }
    },
    "/update/job/period": {
      "post": {
        "tags": [
          "update"
        ],
        "summary": "Start process download and insert changefiles from unpaywall",
        "operationId": "post-update-job-period",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "config",
            "description": "config for process",
            "required": false,
            "schema": {
              "type": "object",
              "required": [
                "userName"
              ],
              "properties": {
                "index": {
                  "type": "string"
                },
                "interval": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "endDate": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Process start"
          },
          "400": {
            "description": "startDate cannot be in the futur or endDate cannot be lower than startDate",
            "schema": {
              "type": "string",
              "default": "changeme"
            }
          },
          "401": {
            "$ref": "#/responses/Not-authorized"
          },
          "409": {
            "description": "Update in progress",
            "schema": {
              "type": "string",
              "default": "changeme"
            }
          }
        },
        "security": [
          {
            "x-api-key": []
          }
        ],
        "description": "Download and insert changefiles from unpaywall.org"
      }
    },
    "/update/job/changefile/{filename}": {
      "post": {
        "tags": [
          "update"
        ],
        "summary": "Start process insert changesfiles downloaded on ezunpaywall",
        "operationId": "post-update-job-changefile-$-filename",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "filename",
            "description": "filename",
            "required": true,
            "type": "string"
          },
          {
            "in": "body",
            "name": "config",
            "description": "config for process",
            "required": false,
            "schema": {
              "type": "object",
              "properties": {
                "index": {
                  "type": "string"
                },
                "offset": {
                  "type": "integer"
                },
                "limit": {
                  "type": "integer"
                }
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "Process start"
          },
          "400": {
            "description": "startDate cannot be in the futur or endDate cannot be lower than startDate",
            "schema": {
              "type": "string",
              "default": "changeme"
            }
          },
          "401": {
            "$ref": "#/responses/Not-authorized"
          },
          "404": {
            "description": "File not found",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "x-examples": {
                "example-1": {
                  "message": "File not found"
                }
              }
            },
            "examples": {
              "File not found": {
                "message": "File not found"
              }
            }
          },
          "409": {
            "description": "Update in progress",
            "schema": {
              "type": "string",
              "default": "changeme"
            }
          }
        },
        "security": [
          {
            "x-api-key": []
          }
        ],
        "description": "Insert changefiles already downloaded on ezunpaywall"
      }
    },
