server {
  server_name ${NGINX_HOST};

  listen 80;
  listen [::]:80;

  ## Configuration
  ## proxy_set_header X-Forwarded-Host $host;
  ## proxy_set_header X-Forwarded-Server $host;
  ##Â proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
  proxy_hide_header X-Powered-By;

  location / {
    proxy_pass http://frontend:8080;
  }

  location ^~ /api/ {
    proxy_pass http://graphql:3000/;
  }

  location ^~ /api/update/ {
    proxy_pass http://update:4000/;
  }

  location ^~ /api/enrich/ {
    proxy_pass http://enrich:5000/;
  }

  location ^~ /api/auth/ {
    proxy_pass http://auth:7000/;
  }

  location ^~ /api/mail/ {
    proxy_pass http://mail:8000/;
  }

  ## doc
