{
    "env": {
        "jest": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "no-await-in-loop": 0,
        "consistent-return": 0,
        "import/no-extraneous-dependencies": [
          "error", { "devDependencies": true }
        ],
        "no-continue": 0
    },
    "overrides": [
      {
        "files": ["tests/**/*.js"],
        "rules": {
          "no-console": "off"
        }
      },
      {
        "files": ["healthcheck.js"],
        "rules": {
          "no-console": "off"
        }
      }
    ]
}
