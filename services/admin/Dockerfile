FROM node:18.19.1-alpine3.19
LABEL maintainer="ezTeam <ezteam@couperin.org>"

EXPOSE 3000

ARG NODE_ENV production

ENV TIMEZONE=${TIMEZONE} \
  \
  SMTP_HOST=${SMTP_HOST} \
  SMTP_PORT=${SMTP_PORT} \
  \
  NOTIFICATIONS_SENDER=${NOTIFICATIONS_SENDER} \
  NOTIFICATIONS_RECEIVERS=${NOTIFICATIONS_RECEIVERS} \
  NOTIFICATIONS_MACHINE=${NOTIFICATIONS_MACHINE} \
  \
  UNPAYWALL_URL=${UNPAYWALL_URL} \
  UNPAYWALL_APIKEY=${UNPAYWALL_APIKEY} \
  \
  ELASTICSEARCH_NODES=${ELASTICSEARCH_NODES} \
  ELASTICSEARCH_USERNAME=${ELASTICSEARCH_USERNAME} \
  ELASTICSEARCH_PASSWORD=${ELASTICSEARCH_PASSWORD} \
  ELASTICSEARCH_MAX_BULK_SIZE=${ELASTICSEARCH_MAX_BULK_SIZE} \
  ELASTICSEARCH_INDEX_ALIAS=${ELASTICSEARCH_INDEX_ALIAS} \
  ELASTICSEARCH_TIMEOUT=${ELASTICSEARCH_TIMEOUT} \
  \
  REDIS_HOST=${REDIS_HOST} \
  REDIS_PORT=${REDIS_PORT} \ 
  REDIS_PASSWORD=${REDIS_PASSWORD} \
  \
  CRON_DOWNLOAD_SNAPSHOT_SCHEDULE=${CRON_DOWNLOAD_SNAPSHOT_SCHEDULE} \
  CRON_DOWNLOAD_SNAPSHOT_ACTIVE=${CRON_DOWNLOAD_SNAPSHOT_ACTIVE} \
  \
  CRON_DATA_UPDATE_SCHEDULE=${CRON_DATA_UPDATE_SCHEDULE} \
  CRON_DATA_UPDATE_ACTIVE=${CRON_DATA_UPDATE_ACTIVE} \
  CRON_DATA_UPDATE_INDEX=${CRON_DATA_UPDATE_INDEX} \
  CRON_DATA_UPDATE_INTERVAL=${CRON_DATA_UPDATE_INTERVAL} \
  \
  CRON_DATA_UPDATE_HISTORY_SCHEDULE=${CRON_DATA_UPDATE_HISTORY_SCHEDULE} \
  CRON_DATA_UPDATE_HISTORY_ACTIVE=${CRON_DATA_UPDATE_HISTORY_ACTIVE} \
  CRON_DATA_UPDATE_HISTORY_INDEX_BASE=${CRON_DATA_UPDATE_HISTORY_INDEX_BASE} \
  CRON_DATA_UPDATE_HISTORY_INDEX_HISTORY=${CRON_DATA_UPDATE_HISTORY_INDEX_HISTORY} \
  CRON_DATA_UPDATE_HISTORY_INTERVAL=${CRON_DATA_UPDATE_HISTORY_INTERVAL} \
  \
  CRON_CLEAN_FILE_SCHEDULE=${CRON_CLEAN_FILE_SCHEDULE} \
  CRON_CLEAN_FILE_ACTIVE=${CRON_CLEAN_FILE_ACTIVE} \
  CRON_CLEAN_FILE_CHANGEFILE_THRESHOLD=${CRON_CLEAN_FILE_CHANGEFILE_THRESHOLD} \
  CRON_CLEAN_FILE_REPORT_THRESHOLD=${CRON_CLEAN_FILE_REPORT_THRESHOLD} \
  CRON_CLEAN_FILE_SNAPSHOT_THRESHOLD=${CRON_CLEAN_FILE_SNAPSHOT_THRESHOLD} \
  \
  ADMIN_APIKEY=${ADMIN_APIKEY} \
  HEALTH_TIMEOUT=${HEALTH_TIMEOUT}

WORKDIR /usr/src/app

COPY package*.json ./
RUN npm ci --omit=dev
COPY . .

HEALTHCHECK --interval=1m --timeout=10s --retries=5 --start-period=20s \
  CMD wget -Y off --no-verbose --tries=1 --spider http://localhost:3000 || exit 1

ENTRYPOINT [ "npm", "start" ]