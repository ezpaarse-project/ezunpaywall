{
  "nodeEnv": "development",
  "timezone": "Europe/Paris",
  "apikey": "changeme",
  "healthTimeout": 3000,
  "port": 3001,
  "redis":  {
    "host": "redis",
    "port": "6379",
    "password": "changeme"
  },
  "elasticsearch": {
    "nodes": "http://elastic:9200",
    "username": "elastic",
    "password": "changeme",
    "indexBase": "unpaywall",
    "indexHistory": "unpaywall_history_*"
  },
  "cron": {
    "cleanFile": {
      "schedule": "0 0 0 * * *",
      "active": true,
      "accessLogThreshold": 365,
      "applicationLogThreshold": 365,
      "healthcheckLogThreshold": 30
    },
    "metrics": {
      "schedule": "0 0 0 * * *",
      "active": true
    }
  },
  "paths": {
    "log": {
      "applicationDir": "./log/application", 
      "accessDir": "./log/access",
      "healthcheckDir": "./log/healthcheck"
    }
  }
}