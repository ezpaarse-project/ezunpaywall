{
    "env": {
        "mocha": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
        "no-await-in-loop": 0,
        "no-underscore-dangle": 0,
        "func-names": 0,
        "import/no-extraneous-dependencies": [
          "error", { "devDependencies": true }
        ]
    }
}
